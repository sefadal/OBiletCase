@model IEnumerable<OBilet.Model.BusLocation.BusLocationResData>

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] OBilet </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/OBilet.styles.css" asp-append-version="true"/>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
<form asp-controller="Index" asp-action="Index" method="get">
    <div class="mb-3">
        <label class="form-label">Nereden</label>
        <select asp-items="ViewBag.BusLocations" class="form-control" required="required">
            <option value="">Seçiniz</option>

            @foreach (var item in ViewBag.BusLocations)
            {
                <option value=@item.Value>@item.Text</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Nereye</label>
        <select asp-items="ViewBag.BusLocations" class="form-control" required="required">
            <option value="">Seçiniz</option>

            @foreach (var item in ViewBag.BusLocations)
            {
                <option value=@item.Value>@item.Text</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Tarih</label>
        <input class="form-control" required="required" type="date" value="@DateTime.Today.Date.ToString("yyyy-MM-dd")">
    </div>

    <button type="submit" class="btn btn-primary">Bileti Bul</button>

    <br/>
    <br/>
    <br/>
    <br/>
    
    <h1>Example</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in ViewBag.BusLocations)
        {
            <tr>
                <td>@item.Value</td>
                <td>@item.Text</td>
            </tr>
        }
        </tbody>
    </table>
</form>
</body>
</html>